{
  "name": "root",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "lerna run clean --stream --parallel",
    "lint": "lerna run lint --stream --parallel",
    "build": "lerna run build",
    "prebuild": "yarn lint",
    "test": "lerna run test --stream --parallel",
    "test:e2e": "jest",
    "publish": "lerna publish from-package",
    "start": "node server/server.js",
    "stop": "node server/server.stop.js",
    "build-storybook": "storybook-to-aws-s3 --out=build --packages packages --bucket-path bucket/storybook --monorepo-index-generator server/storybook-index-generator.js --dry-run"
  },
  "jest": {
    "preset": "jest-puppeteer",
    "verbose": true,
    "roots": [
      "tests"
    ],
    "setupFilesAfterEnv": [
      "@wordpress/jest-puppeteer-axe",
      "expect-puppeteer"
    ]
  },
  "devDependencies": {
    "@storybook/storybook-deployer": "^2.8.5",
    "@wordpress/jest-puppeteer-axe": "^1.6.0",
    "express": "^4.17.1",
    "jest": "^25.1.0",
    "jest-image-snapshot": "^2.12.0",
    "jest-puppeteer": "^4.4.0",
    "lerna": "^3.16.4",
    "nunjucks": "^3.2.0",
    "puppeteer": "^2.1.0",
    "socket.io": "^2.3.0"
  }
}
