{
  "name": "root",
  "private": true,
  "license": "UNLICENSED",
  "volta": {
    "node": "12.22.1",
    "yarn": "1.22.10"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "lerna run clean",
    "lint": "lerna run lint",
    "build-components-core": "lerna run --scope @asu-design-system/components-core build",
    "build": "lerna run --ignore @asu-design-system/components-core build",
    "prebuild": "yarn build-components-core && yarn lint",
    "test": "lerna run test --stream --parallel",
    "test:e2e": "jest",
    "publish-packages": "lerna exec --concurrency 1 -- npx --no-install semantic-release -e semantic-release-monorepo",
    "percy": "lerna run percy",
    "start": "node server/server.js",
    "stop": "node server/server.stop.js",
    "build-storybook": "storybook-to-aws-s3 --out=build --packages packages --bucket-path bucket/storybook --monorepo-index-generator server/storybook-index-generator.js --dry-run",
    "deploy-storybook": "storybook-to-ghpages --out=build --packages packages --monorepo-index-generator server/storybook-index-generator.js --source-branch=develop-gha --ci",
    "prepare": "husky install",
    "commit": "cz",
    "check-element-changes": "node ./scripts/check-element-changes.js -d"
  },
  "jest": {
    "preset": "jest-puppeteer",
    "verbose": true,
    "roots": [
      "tests"
    ],
    "setupFilesAfterEnv": [
      "@wordpress/jest-puppeteer-axe",
      "expect-puppeteer"
    ],
    "testTimeout": 30000
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ASU/asu-unity-stack.git"
  },
  "devDependencies": {
    "@americanexpress/purgecss-loader": "^2.0.0",
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@commitlint/config-lerna-scopes": "^12.0.1",
    "@semantic-release/git": "^9.0.0",
    "@storybook/storybook-deployer": "^2.8.8",
    "clean-webpack-plugin": "^3.0.0",
    "commitizen": "^4.2.3",
    "copy-webpack-plugin": "^8.1.1",
    "css-minimizer-webpack-plugin": "^2.0.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.24.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-preact": "^1.1.3",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-import-helpers": "^1.1.0",
    "eslint-plugin-jest": "^24.3.5",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "gulp": "^4.0.2",
    "gulp-clean": "^0.4.0",
    "gulp-filter": "^7.0.0",
    "gulp-nunjucks": "^5.1.0",
    "husky": "^6.0.0",
    "lerna": "^3.22.1",
    "mini-css-extract-plugin": "^1.4.1",
    "nunjucks": "^3.2.0",
    "prettier": "^2.2.1",
    "purgecss-webpack-plugin": "^4.0.3",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.4.2",
    "semantic-release-monorepo": "^7.0.4",
    "start-server-and-test": "^1.9.1",
    "webpack": "^5.32.0",
    "webpack-bundle-analyzer": "^4.4.1",
    "webpack-cli": "^4.6.0",
    "webpack-dashboard": "^3.3.1",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.7.3",
    "webpack-node-externals": "^2.5.0"
  },
  "dependencies": {},
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
